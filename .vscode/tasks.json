{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.c",
                "-o",
                "${workspaceFolder}\\build\\base64anlz.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\build\\",
                "shell": true   // 可以使用*.c
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}